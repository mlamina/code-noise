    <script>
        let youtubePlayer;

        function onYouTubeIframeAPIReady() {
            youtubePlayer = new YT.Player('youtube-player', {
                height: '100',
                width: '100%',
                videoId: 'Nep1qytq9JM', // Replace with your video ID
                events: {
                    'onReady': onPlayerReady
                }
            });
        }

        function onPlayerReady(event) {
            $('#youtube-toggle').on('click', function() {
                if (youtubePlayer.getPlayerState() === YT.PlayerState.PLAYING) {
                    youtubePlayer.pauseVideo();
                    $('#youtube-toggle').text('Play').removeClass('is-danger').addClass('is-success');
                } else {
                    youtubePlayer.playVideo();
                    $('#youtube-toggle').text('Stop').removeClass('is-success').addClass('is-danger');
                }
            });

            $('#youtube-volume').on('input', function() {
                youtubePlayer.setVolume(this.value);
            });
        }
    </script>
